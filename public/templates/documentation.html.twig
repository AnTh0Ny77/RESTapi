<!doctype html>
<!-- layoutMain.twig -->
<html lang="fr">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<link rel="icon"  href="public/img/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="public/css/doc.css">
	<title>API MY RECODE</title>
</head>
<body>
    <div class="container mt-2"> 
        <h2 class="h2-api">Documentation API MYRecode</h2>
        {% for key , operation in doc %}
                    {% for step in operation %}
                    <div class="container-operation">
                            {% if step.method == 'POST' %}
                                <div class="POST py-2 d-flex justify-content-between">{{step.method}}
                                    <div class="path text-uppercase">{{step.path}}</div>
                                </div>
                            {% elseif step.method == 'GET' %}
                                <div class="GET  py-2 d-flex justify-content-between">{{step.method}}
                                    <div class="path text-uppercase">{{step.path}}</div>
                                </div>
                            {% elseif step.method == 'PUT' %}
                                <div class="PUT  py-2 d-flex justify-content-between">{{step.method}}
                                    <div class="path text-uppercase">{{step.path}}</div>
                                </div>
                            {% elseif step.method == 'DELETE' %}
                                <div class="DELETE  py-2 d-flex justify-content-between">{{step.method}}
                                    <div class="path text-uppercase">{{step.path}}</div>
                                </div>
                            {% endif %}
                            <div class=" py-2 d-flex justify-content-between">
                                <div class="container-details">
                                    <div class="text-api">
                                        {{step.description}}
                                    </div>
                                    <div class="text-api my-2">
                                        {% if step.body %}
                                        <b class="text-uppercase">type :</b> {{step.body.type}}<br>
                                        
                                        <button class="btn-recode-mini my-3" type="button" data-bs-toggle="collapse" data-bs-target="#{{step.name}}" aria-expanded="false" aria-controls="{{step.path}}">
                                        Body
                                        </button>
                                       
                                        <div class="collapse" id="{{step.name}}">
                                            <div class="card card-body">
                                                {% for row in step.body.fields %}
                                                        "{{row}}" <br>
                                                {% endfor %}
                                            </div>
                                        </div>
                                        {% endif %}
                                       
                                    </div>
                                </div>
                                <div class="container-details-droite">
                                   <div class="text-api">
                                        <b class="text-uppercase">r√©ponse :</b> {{step.reponse}}<br>
                                        <div class="my-2">
                                            <b class="text-uppercase">Authentification :</b> <span> {{step.Auth}} </span>
                                        </div>
                                        
                                   </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
        {% endfor %}
    </div>
    {% block script %}
    {% endblock %}
</body>
</html>
